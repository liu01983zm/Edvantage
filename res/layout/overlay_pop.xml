<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bubble"  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"  
    android:paddingLeft="5dp" 
    android:paddingTop="10dp"  
    android:paddingRight="5dp" 
    android:paddingBottom="30dp" 
    android:orientation="horizontal" >
    <FrameLayout android:layout_width="fill_parent" 
    android:layout_height="wrap_content"  
    android:layout_weight="0.6"> 
    <ImageView android:layout_width="fill_parent" 
       android:layout_height="fill_parent" 
       android:src="@drawable/shopimg"
     >   
    </ImageView>
    </FrameLayout>
   <LinearLayout 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"  
    android:layout_weight="0.4"
    android:background="@null"
    android:layout_gravity="center"
    android:orientation="vertical">
      <TextView android:id="@+id/shop_name"
          android:layout_width="fill_parent" 
          android:layout_height="wrap_content" 
          android:text="MR.SUB"
          android:textSize="18dp"
          android:textColor="#FF0000"
          android:textStyle="bold"
          android:padding="5dp"

          />
       <TextView android:id="@+id/shop_phone"
          android:layout_width="fill_parent" 
          android:layout_height="wrap_content" 
          android:text="416-555-1234"
          android:textColor="#000000"
          android:layout_marginTop="5dp"
 		  android:padding="5dp"
          />
       <TextView android:id="@+id/shop_address"
          android:layout_width="fill_parent" 
          android:layout_height="wrap_content" 
          android:text="21 Down Street"
           android:textColor="#000000"
           android:layout_marginTop="5dp"
 			android:padding="5dp"
          />
         <TextView android:id="@+id/shop_distance"
          android:layout_width="fill_parent" 
          android:layout_height="wrap_content" 
          android:layout_marginTop="20dp"
          android:text="1.5KM"
          android:padding="5dp"
          />
         <Button android:id="@+id/btn_coupon"
          android:layout_width="fill_parent" 
          android:layout_height="wrap_content" 
           android:padding="5dp"
           android:layout_marginTop="5dp"
          android:background="#ff0000"
          android:text="Get Coupon"/>
         <Button android:id="@+id/btn_details" 
          android:layout_width="fill_parent" 
          android:layout_height="wrap_content" 
          android:layout_marginTop="5dp"
           android:padding="5dp"
          android:background="#ff0000"
          android:text="Details"/>
   </LinearLayout>

</LinearLayout>